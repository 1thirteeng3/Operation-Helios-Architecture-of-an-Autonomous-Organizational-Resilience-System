{
  "uid": "system-overview",
  "title": "Helius System Overview",
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 0,
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Node",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 2,
      "title": "Memory Usage by Node (MB)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / 1024 / 1024",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "min": 0
        },
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 3,
      "title": "Node Ready Status",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kube_node_status_condition{condition=\"Ready\",status=\"true\"}",
          "legendFormat": "Ready"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    }
  ]
}