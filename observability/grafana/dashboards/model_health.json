{
  "uid": "model-health",
  "title": "Model Health",
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 0,
  "panels": [
    {
      "id": 1,
      "title": "Request Latency (p95)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(request_latency_seconds_bucket{service=\"fastapi-llm-assistant\"}[5m])) by (le))",
          "legendFormat": "p95 latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 2,
      "title": "Error Rate (%)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(request_errors_total{service=\"fastapi-llm-assistant\"}[5m])) / sum(rate(request_total{service=\"fastapi-llm-assistant\"}[5m]))",
          "legendFormat": "error_rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 3,
      "title": "Drift Score",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(model_drift_score{model=\"recommendation\"})",
          "legendFormat": "drift"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {}
    }
  ]
}